<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".SignupActivity">


    <RelativeLayout

        android:id="@+id/signupRelLayout"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:visibility="visible">

        <TextView

            android:id="@+id/signuptextView"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="16dp"

            android:background="@color/colorPrimaryDark"

            android:gravity="center"

            android:padding="16dp"

            android:paddingLeft="32dp"

            android:paddingRight="32dp"

            android:text="Create your account"

            android:textAppearance="?android:textAppearanceMedium"

            android:textColor="@android:color/white" />

        <EditText

            android:id="@+id/signupNameEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@id/signuptextView"

            android:layout_marginLeft="24dp"

            android:layout_marginTop="16dp"

            android:layout_marginRight="24dp"

            android:background="@android:color/white"

            android:drawableLeft="@drawable/profile_icon"

            android:ems="10"

            android:gravity="center"

            android:hint="Enter your Name"

            android:inputType="textEmailAddress"

            android:padding="16dp"

            android:textAppearance="?android:textAppearanceMedium" />

        <EditText

            android:id="@+id/signupRollNoEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@id/signupNameEditText"

            android:layout_marginLeft="24dp"

            android:layout_marginTop="16dp"

            android:layout_marginRight="24dp"

            android:background="@android:color/white"

            android:drawableLeft="@drawable/roll_no_icon"

            android:ems="10"

            android:gravity="center"

            android:hint="Enter your Roll number"

            android:inputType="textEmailAddress"

            android:padding="16dp"

            android:textAppearance="?android:textAppearanceMedium" />

        <EditText

            android:id="@+id/signupEmailEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@id/signupRollNoEditText"

            android:layout_marginLeft="24dp"

            android:layout_marginTop="16dp"

            android:layout_marginRight="24dp"

            android:background="@android:color/white"

            android:drawableLeft="@drawable/emailimg"

            android:ems="10"

            android:gravity="center"

            android:hint="Enter your E-mail id"

            android:inputType="textEmailAddress"

            android:padding="16dp"

            android:textAppearance="?android:textAppearanceMedium" />


        <EditText

            android:id="@+id/signupPwdEditText"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@id/signupEmailEditText"

            android:layout_centerHorizontal="true"

            android:layout_marginLeft="24dp"

            android:layout_marginTop="16dp"

            android:layout_marginRight="24dp"

            android:background="@android:color/white"

            android:drawableLeft="@drawable/pwdimg"

            android:ems="10"

            android:gravity="center"

            android:hint="Enter a Password"

            android:inputType="textPassword"

            android:padding="16dp"

            android:textAppearance="?android:textAppearanceMedium" />


        <Button

            android:id="@+id/loginSignUpButton"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@id/signupPwdEditText"

            android:layout_centerHorizontal="true"

            android:layout_marginTop="16dp"

            android:background="@color/colorPrimaryDark"

            android:onClick="register"

            android:padding="16dp"

            android:text="Sign Up"

            android:textColor="@android:color/white" />


    </RelativeLayout>


    <LinearLayout

        android:id="@+id/inProcessLayout2"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:gravity="center"

        android:orientation="vertical"

        android:visibility="invisible">

        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:gravity="center"

            android:text="Registering you, Please wait..."

            android:textAppearance="?android:textAppearanceLarge"

            android:textColor="@color/colorPrimaryDark" />

        <ProgressBar

            android:id="@+id/progressBar"

            style="?android:attr/progressBarStyle"

            android:layout_width="match_parent"

            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>