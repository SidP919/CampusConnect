<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNoticeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_notice_AddNoticeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Add Notice"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#ffffff" />

        <LinearLayout
            android:id="@+id/add_notice_LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_notice_AddNoticeTV"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Title: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/add_notice_titleET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Title comes here"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                tools:text="thisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.com" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_notice_LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_notice_LinearLayout01"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Details: "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/add_notice_bodyET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Notice Details comes here"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#000000"
                tools:text="thisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.comthisissid146@gmail.com" />
        </LinearLayout>

        <Button
            android:id="@+id/add_notice_addNoticeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_notice_LinearLayout02"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:text="Add Notice"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#ffffff" />

    </RelativeLayout>
</ScrollView>